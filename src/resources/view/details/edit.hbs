<div class="mt-4">
    <form method="post"  action="/details/{{books._id}}?_method=PUT">
        <h2>Sửa Sách</h2>
        <div class="form-group mt-4">
            <label for="">Name</label>
            <input type="text" class="form-control" value="{{books.name}}" name="name" id="name" placeholder="" required="">
        </div>
        <div class="form-group">
            <label for="">Image</label>
            <input type="text" class="form-control" value="{{books.image}}" name="image" id="image" placeholder="" required="">
        </div>
        <div class="form-group">
            <label for="">Author</label>
            <input type="text" class="form-control" value="{{books.author}}" name="author" id="author" placeholder="" required="">
        </div>
        <div class="form-group">
            <label for="">Category</label>
            <input type="text" class="form-control" value="{{books.category}}" name="category" id="category" placeholder="" required="">
        </div>
        <button type="submit">Lưu lại</button>
    </form>
</div>