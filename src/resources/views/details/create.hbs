<div class="mt-4">
    <form method="post"  action="/details/store">
        <h2>Thêm Sách</h2>
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" class="form-control {{errName}}" name="name" id="name" placeholder="{{messageName}}" required="">
        </div>
        <div class="form-group">
            <label for="">Image</label>
            <input type="text" class="form-control {{errImage}}" name="image" id="image" placeholder="{{messageImage}}" required="">
        </div>
        <div class="form-group">
            <label for="">Author</label>
            <input type="text" class="form-control" name="author" id="author" placeholder="" required="">
        </div>
        <div class="form-group">
            <label for="">Category</label>
