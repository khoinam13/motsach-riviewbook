 <div class="mt-4">
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Tạo Tài Khoản</p>
                                    {{!-- ================================ --}}

                                    <form class="mx-1 mx-md-4" method="post" action="register/store">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example1c">Tên Đăng Nhập</label>
                                                <input role="alert" name="registerName" type="text" id="registerName" class="form-control {{errName}}"  required="" placeholder="" value="{{valueName}}" />
                                                <p class="error">{{messageName}}</p>
                                            </div>
                                        </div>
                                        <style>
                                            .errName{
                                                background-color: red;
                                            }
                                        </style>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example3c">Email</label>
                                                <input name="registerEmail" type="email" id="form3Example3c" class="form-control {{errEmail}}" required="" placeholder="" value="{{valueEmail}}" />
                                                <p class="error">{{messageEmail}}</p> 
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4c">Mật Khẩu</label>
                                                <input name="registerPassword" type="password" id="form3Example4c" class="form-control {{errPassword}}" required="" placeholder=""  value="{{valuePassword}}" />                    
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">Nhập Lại Mật Khẩu</label>
                                                <input name="registerPasswordBack" type="password" id="form3Example4cd" class="form-control {{errPassword}}" required="" value="{{valuePasswordBack}}"/>
                                                <p class="error">{{messagePassword}}</p>     
                                            </div>
                                        </div>

                                        {{!-- <div class="form-check d-flex justify-content-center mb-5">
                                            <input class="form-check-input me-2" type="checkbox" value=""
                                                id="form2Example3c" />
                                            <label class="form-check-label" for="form2Example3">
                                                I agree all statements in <a href="#!">Terms of service</a>
                                            </label>
                                        </div> --}}

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-primary btn-lg">Đăng Kí</button>
                                        </div>

                                    </form>
                                    {{!-- ================================ --}}

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="https://sachtop10.com/wp-content/uploads/2020/03/top-sach.png"
                                        class="img-fluid" alt="Sample image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>